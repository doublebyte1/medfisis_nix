<?xml version="1.0" encoding="utf-8"?>
<VisualStudioToolFile
	Name="Qt GUI Toolkit Rules (by Daher Alfawares)"
	Version="8.00"
	>
	<Rules>
		<CustomBuildRule
			Name="UIC"
			DisplayName="Qt UI Compiler"
			CommandLine="%QTDIR%\bin\uic.exe [inputs] -o &quot;[UicDirectory]\[QtUicPrefix]$(InputName)[QtUicExt]&quot;"
			Outputs="&quot;[UicDirectory]\[QtUicPrefix]$(InputName)[QtUicExt]&quot;"
			FileExtensions="*.ui"
			ExecutionDescription="$(InputName).ui"
			>
			<Properties>
				<StringProperty
					Name="QtUicExt"
					DisplayName="UI Header file extension"
					Category="Output"
					Description="The header file extension generated by the UIC Compiler. (Example: .h)"
					HelpURL="http://code.google.com/p/xr-qt-msvc/"
					Switch="[value]"
					DefaultValue=".h"
				/>
				<StringProperty
					Name="QtUicPrefix"
					DisplayName="UI Header file prefix"
					Category="Output"
					Description="The prefix string to be used for UIC output. ( usually ui_ )"
					HelpURL="http://code.google.com/p/xr-qt-msvc/"
					Switch="[value]"
					DefaultValue="ui_"
				/>
				<StringProperty
					Name="UicDirectory"
					DisplayName="UicDirectory"
					Switch="[value]"
					DefaultValue="./GeneratedFiles"
				/>
			</Properties>
		</CustomBuildRule>
		<CustomBuildRule
			Name="MOC"
			DisplayName="Qt Meta Object Compiler"
			CommandLine="%QTDIR%\bin\moc.exe [QtMocNoWarnings] [QtCoreLib] [QtShared] [QtThread] [QtUnicode] [QtLargeFile] [QtKeywords] [QtOpenGLLib] [QtNoDebug] [QtGuiLib] -DWIN32 -D_MSC_VER=1500 -DWIN32 [Inputs] -o&quot;$(IntDir)\$(InputName)[QtMocPfx].cpp&quot; &amp;&amp; cl.exe $(IntDir)\$(InputName)[QtMocPfx].cpp [QtCommandLine] /Fo&quot;$(IntDir)\$(InputName)[QtMocPfx].obj&quot;"
			Outputs="$(IntDir)\$(InputName)[QtMocPfx].obj"
			FileExtensions="*.hpp"
			ExecutionDescription="$(InputName).hpp"
			>
			<Properties>
				<StringProperty
					Name="QtMocPfx"
					DisplayName="Output file postfix"
					Category="Output"
					Description="A postfix is added to the source and object files generated to prevent conflict with your source files. [Example: _moc leads to a.hxx -&gt; a_moc.cpp]"
					HelpURL="http://code.google.com/p/xr-qt-msvc/"
					Switch="[value]"
					DefaultValue="_moc"
				/>
				<StringProperty
					Name="QtCommandLine"
					DisplayName="C++ Command Line Options"
					Category="General"
					Description="Copy the command line options from your C/C++ section to match the qt compilation with your setup. Make sure you remove the /Fo option, for more details refer to the documentation."
					HelpURL="http://code.google.com/p/xr-qt-msvc/"
					Switch="[value]"
				/>
				<BooleanProperty
					Name="QtShared"
					DisplayName="Use QT as a Shared Library?"
					Category="Moc Definitions"
					Description="Use QT as a Shared Library?"
					Switch="-DQT_SHARED"
					DefaultValue="true"
				/>
				<BooleanProperty
					Name="QtThread"
					DisplayName="Multi-threaded Support?"
					Category="Moc Definitions"
					Switch="-DQT_THREAD_SUPPORT"
					DefaultValue="true"
				/>
				<BooleanProperty
					Name="QtUnicode"
					DisplayName="Unicode Support?"
					Category="Moc Definitions"
					Switch="-DUNICODE"
					DefaultValue="true"
				/>
				<BooleanProperty
					Name="QtLargeFile"
					DisplayName="Large File Support?"
					Category="Moc Definitions"
					Switch="-DQT_LARGEFILE_SUPPORT"
					DefaultValue="true"
				/>
				<BooleanProperty
					Name="QtKeywords"
					DisplayName="Disable QT Keywords."
					Category="Moc Definitions"
					Description="If QT_NO_KEYWORDS is defined, &quot;signals&quot;, &quot;slots&quot; and &quot;emit&quot; are not defined, thus increasing the interoperability with other toolkits by avoiding some common name clashes. However, the SIGNAL() and SLOT() macros are still defined, which may cause name clashes still."
					Switch="-DQT_NO_KEYWORDS"
					DefaultValue="true"
				/>
				<BooleanProperty
					Name="QtNoDebug"
					DisplayName="Disable QT Debuging"
					Category="Moc Definitions"
					Switch="-DQT_NO_DEBUG"
					DefaultValue="true"
				/>
				<BooleanProperty
					Name="QtGuiLib"
					DisplayName="Use QT Gui Library"
					Category="QT Libraries"
					Switch="-DQT_GUI_LIB"
					DefaultValue="true"
				/>
				<BooleanProperty
					Name="QtCoreLib"
					DisplayName="Use QT Core Library"
					Category="QT Libraries"
					Switch="-DQT_CORE_LIB"
					DefaultValue="true"
				/>
				<BooleanProperty
					Name="QtOpenGLLib"
					DisplayName="Use QT OpenGL Library"
					Category="QT Libraries"
					Switch="-DQT_OPENGL_LIB"
				/>
				<BooleanProperty
					Name="QtMocNoWarnings"
					DisplayName="Do not display warnings"
					Category="General"
					Description="do not display warnings"
					Switch="/nw"
				/>
			</Properties>
		</CustomBuildRule>
		<CustomBuildRule
			Name="QRC"
			DisplayName="Qt Resource Compiler"
			CommandLine="&quot;$(QTDIR)\bin\rcc.exe&quot; -name $(InputName) -no-compress $(InputFileName) -o [RccDir]\qrc_$(InputName).cpp"
			Outputs="&quot;[RccDir]\qrc_$(InputName).cpp&quot;"
			FileExtensions="*.qrc"
			ExecutionDescription="$(InputName).qrc"
			>
			<Properties>
				<StringProperty
					Name="QtCommandLine"
					DisplayName="C++ Command Line Options"
					Category="General"
					Description="Copy the command line options from your C/C++ section to match the qt compilation with your setup. Make sure you remove the /Fo option, for more details refer to the documentation."
					HelpURL="http://code.google.com/p/xr-core/wiki/QtRules"
					Switch="[value]"
				/>
				<StringProperty
					Name="QtQrcPfx"
					DisplayName="Output file postfix"
					Category="Output"
					Description="A postfix is added to the source and object files generated to prevent conflict with your source files. [Example: _qrc leads to a.qrc -&gt; a_qrc.cpp]"
					HelpURL="http://code.google.com/p/xr-qt-msvc/"
					Switch="[value]"
					DefaultValue="_qrc"
				/>
				<StringProperty
					Name="RccDir"
					DisplayName="RccDir"
					Switch="[value]"
					DefaultValue=".\GeneratedFiles"
				/>
			</Properties>
		</CustomBuildRule>
	</Rules>
</VisualStudioToolFile>
